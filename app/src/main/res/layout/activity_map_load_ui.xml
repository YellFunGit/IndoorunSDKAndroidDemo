<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_map_load_ui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yellfun.demo.ui.map.MapLoadUIActivity">

    <com.indoorun.mapapi.map.gl.IdrMapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.indoorun.mapapi.view.SpinnerView
        android:id="@+id/map_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp" />

    <com.indoorun.mapapi.view.NorthView
        android:id="@+id/map_north_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <com.indoorun.mapapi.view.PositionView
        android:id="@+id/map_position_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp" />
</RelativeLayout>
