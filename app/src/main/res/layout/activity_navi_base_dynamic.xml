<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_navi_base_dynamic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yellfun.demo.ui.navigate.NaviBaseDynamicActivity">

    <com.indoorun.mapapi.map.gl.IdrMapView
        android:id="@+id/map_switcher_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.indoorun.mapapi.view.SpinnerView
        android:id="@+id/map_switcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="点击unit开始动态导航" />

    <Button
        android:id="@+id/navi_stop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:text="结束导航" />

</RelativeLayout>
